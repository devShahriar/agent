FROM --platform=linux/amd64 golang:1.21-alpine as builder

WORKDIR /app
COPY . .

# Install minimal build requirements
RUN apk add --no-cache gcc musl-dev

# Build the binary
RUN CGO_ENABLED=1 GOOS=linux GOARCH=amd64 go build -o abproxy-agent ./cmd/agent

# Final minimal image
FROM --platform=linux/amd64 alpine:latest

# Install only the SSL runtime library
RUN apk add --no-cache libssl3

WORKDIR /app
COPY --from=builder /app/abproxy-agent .
COPY --from=builder /app/pkg/tracer/bpf_*.go /app/pkg/tracer/
COPY --from=builder /app/pkg/tracer/bpf_*.o /app/pkg/tracer/
COPY --from=builder /app/pkg/tracer/bpf/ /app/pkg/tracer/bpf/

CMD ["./abproxy-agent"] 